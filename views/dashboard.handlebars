<div class="section mt-5">
    <div class="container-fluid">
        <div class="row animate__animated animate__fadeIn ">
            
            <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 pt-sm-5 createform ">
                <div class="form-title text-white mb-4">
                        <h3 class="header"><i class="bi bi-plus-circle"></i> Create Post</h3>
                        <p id="user_id" hidden="true"  >{{user_id}}</p>
                    </div>
                    <form class="row g-3  align-items-end">
                        <div class="col-12">
                            <label for="inputTitle" class="form-label form-marker">Title</label>
                            <input type="text" class="form-control custom-input" id="inputTitle" placeholder="Enter title">
                        </div>
                        <div class="col-12">
                            <label for="inputDescription" class="form-label  form-marker">Description</label>
                            <textarea class="form-control custom-input" id="Resource-description" rows="3"
                                placeholder="Enter Description"></textarea>
                        </div>
                        <div class="col-md-4 ">
                            <label for="inputTags" class="form-label  form-marker">Tags</label>
                            <input type="text" class="form-control custom-input" id="inputTags" placeholder="Tag is optional">
                        </div>
                        <div class="col-md-4">
                            <label for="inputCategory" class="form-label  form-marker">Category</label>
                            <select id="inputCategory" class="form-select custom-input">
                                <option selected>Select a category</option>
                                <option value="1" id="sports">sports</option>
                                <option value="2" id="food">food</option>
                                <option value="3" id="music">music</option>
                                <option value="4" id="weather">weather</option>
                                <option value="5" id="events">events</option>
                                <option value="6" id="gaming">gaming</option>
                                <option value="7" id="technologies">technologies</option>
                                <option value="8" id="shopping">shopping</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn create-resource-button w-100">Send </button>
                        </div>
                    </form>
                </div>


<div class="col-12 col-sm-12 col-md-12 col-lg-6 post-container pt-4">
                <div class="card-title  mb-4">
                    <h3 class="header"> <i class="bi bi-check-circle"> </i> Your Posts </h3>
                </div>
                {{#each resources as |resource|}}
                {{>create-post}}
                {{/each}}
            </div>
            </div>

        </div>
        <script src="/js/resource-with-image.js"></script>
                <script src="/js/timeStamp.js"></script>

    </div>